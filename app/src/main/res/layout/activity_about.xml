<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_above="@id/pagetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/pagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="About Us"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"/>

    <ImageView
        android:id="@+id/vect"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/pagetitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_menu_book_24"
        app:tint="?attr/colorAccent" />

    <TextView
        android:id="@+id/addName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Management"
        android:layout_below="@id/vect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/version"
        android:layout_below="@id/addName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version - testing"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_below="@id/version"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"/>

    <TextView
        android:id="@+id/groupintro"
        android:layout_below="@id/version"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="?attr/colorPrimary"
        android:text="Capstone Group Members"/>
    <TextView
        android:id="@+id/member1"
        android:layout_below="@id/groupintro"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ashish Gaurav"/>

    <TextView
        android:id="@+id/member2"
        android:layout_below="@id/member1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Anand Kumar"/>

    <TextView
        android:id="@+id/member3"
        android:layout_below="@id/member2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Arijit Bhattacharya"/>

    <TextView
        android:id="@+id/member4"
        android:layout_below="@id/member3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tushar paul"/>

    <TextView
        android:id="@+id/member5"
        android:layout_below="@id/member4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Suman paul"/>

</RelativeLayout>